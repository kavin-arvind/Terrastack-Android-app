<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem_ipsum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis vehicula magna sit amet augue lacinia, id faucibus lacus feugiat. Proin vitae pretium nunc, at tincidunt purus. Nulla tincidunt malesuada dolor, nec egestas ligula porttitor at." />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/textview_first"
        android:layout_marginTop="16dp" />

        <ScrollView
        android:id="@+id/scroll"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:padding="10sp"
            android:text="scroll view"
            app:layout_constraintTop_toBottomOf="@id/map">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="24sp"
                android:id="@+id/tv"
                android:text="Demo text"/>
        </ScrollView>
    
    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintTop_toBottomOf="@id/scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
